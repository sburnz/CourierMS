<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/GoodsLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's in it: Books"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16sp"
                android:alpha=".83"
                android:id="@+id/tvItem"
                />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up to 1 kg"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvItem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvWeight"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stated value: Rs. 55"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvWeight"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvParcelValue"
        />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GoodsLayout"
                android:layout_marginTop="10sp"
                android:alpha=".83"
                android:background="@color/colorAccent"
                android:id="@+id/Divider1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circle1"
                app:layout_constraintTop_toBottomOf="@id/Divider1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:background="@drawable/tv_circle_bg"
                android:paddingHorizontal="@dimen/tvCirclePaddingHorizontal"
                android:paddingVertical="@dimen/tvCirclePaddingVertical"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PickUpLayout"
                app:layout_constraintTop_toTopOf="@id/circle1"
                app:layout_constraintStart_toEndOf="@id/circle1"
                android:layout_marginStart="10sp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SenderABC"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvSender"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address1"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvSender"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvSenderAddress"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today from 00:05 to 00:15"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvSenderAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvPickUpTime"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+977-9865854982"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvPickUpTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvSenderPhone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="//Comments"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvSenderPhone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".63"
        android:id="@+id/tvSenderComments"
        />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/PickUpLayout"
                android:layout_marginTop="10sp"
                android:layout_marginStart="60sp"
                android:alpha=".83"
                android:background="@color/colorAccent"
                android:id="@+id/Divider2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circle2"
                app:layout_constraintTop_toBottomOf="@id/Divider2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin"
                android:text="2"
                android:textColor="@color/colorAccent"
                android:background="@drawable/tv_circle_bg"
                android:paddingHorizontal="@dimen/tvCirclePaddingHorizontal"
                android:paddingVertical="@dimen/tvCirclePaddingVertical"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DeliveryLayout"
                app:layout_constraintTop_toTopOf="@id/circle2"
                app:layout_constraintStart_toEndOf="@id/circle2"
                android:layout_marginStart="10sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReceiverXYZ"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvReceiver"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address2"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvReceiver"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvReceiverAddress"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today from 16:00 to 18:00"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvReceiverAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvDeliveryTime"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+977-9765445765"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvDeliveryTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".83"
        android:id="@+id/tvReceiverPhone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="//Comments"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvReceiverPhone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:alpha=".63"
        android:id="@+id/tvReceiverComments"
        />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="2sp"
                android:layout_height="0sp"
                app:layout_constraintTop_toBottomOf="@id/circle1"
                app:layout_constraintBottom_toTopOf="@id/circle2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="37sp"
                android:layout_marginVertical="10sp"
                android:background="@color/colorAccent"
                />

</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>